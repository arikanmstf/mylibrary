{
  "name": "mylibrary",
  "version": "3.0.0",
  "description": "MyLibrary is an online book library that you can manage and share your books.",
  "main": "src/app/native/index.js",
  "repository": "git@github.com:arikanmstf/mylibrary.git",
  "scripts": {
    "start": "yarn run start-web",
    "start-web": "yarn run start-web:local-dev",
    "start-web:local-dev": "webpack-dev-server --config webpack.config.local-dev.js --mode development",
    "start-web:local-prod": "webpack-dev-server --config webpack.config.local-prod.js --mode production",
    "start-web:live-dev": "webpack-dev-server --config webpack.config.live-dev.js --mode development",
    "start-web:live-prod": "webpack-dev-server --config webpack.config.live-prod.js --mode production",
    "build-web:local-dev": "webpack --config webpack.config.local-dev.js --mode development",
    "build-web:local-prod": "webpack --config webpack.config.local-prod.js --mode production",
    "build-web:live-prod": "webpack --config webpack.config.live-prod.js --mode production",
    "deploy-web:local": "rm -rf /Users/mstf/Sites/ml-test && cp -R dist /Users/mstf/Sites/ml-test",
    "start-native": "yarn run start-native:local-dev",
    "start-native:local-dev": "REACT_NATIVE_ENVIRONMENT=local REACT_NATIVE_IS_DEVELOPMENT=true react-native-scripts start",
    "test": "jest",
    "lint": "eslint --max-warnings 0 --ext .js src/",
    "flow": "flow",
    "flow-update": "flow-typed install",
    "fresh-install": "rm -rf $TMPDIR/react-* && rm -rf $TMPDIR/metro* && rm -rf node_modules && rm yarn.lock && yarn cache clean && yarn install",
    "check": "yarn run test && yarn run lint && yarn run flow",
    "postinstall": "yarn run flow-update",
    "create-module": "node src/scripts/create-module/index"
  },
  "keywords": [
    "react",
    "native",
    "template",
    "webpack",
    "redux"
  ],
  "author": "Mustafa Arikan",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.5",
    "babel-loader": "7.1.5",
    "babel-plugin-transform-react-jsx-source": "6.22.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-expo": "4.0.0",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "6.24.1",
    "copy-webpack-plugin": "4.5.2",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "17.0.0",
    "eslint-loader": "2.0.0",
    "eslint-plugin-flowtype": "2.49.3",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jsx-a11y": "6.1.0",
    "eslint-plugin-react": "7.10.0",
    "file-loader": "1.1.11",
    "file-system": "2.2.2",
    "flow-bin": "0.74.0",
    "flow-typed": "2.5.1",
    "html-webpack-plugin": "3.2.0",
    "jest": "23.3.0",
    "prompt": "1.0.0",
    "react-native-scripts": "1.14.0",
    "uglifyjs-webpack-plugin": "1.3.0",
    "webpack": "4.15.1",
    "webpack-cli": "3.0.8",
    "webpack-dev-server": "3.1.4",
    "yargs": "11.1.0"
  },
  "dependencies": {
    "@material-ui/core": "1.3.1",
    "@material-ui/icons": "2.0.1",
    "axios": "0.18.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-runtime": "6.26.0",
    "expo": "27.1.0",
    "immutable": "3.8.2",
    "lodash.debounce": "4.0.8",
    "native-base": "2.6.1",
    "react": "16.3.1",
    "react-dom": "16.4.1",
    "react-native": "0.55.4",
    "react-native-loading-spinner-overlay": "0.5.2",
    "react-native-storage": "0.2.2",
    "react-redux": "5.0.7",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-router-native": "4.3.0",
    "redux": "4.0.0",
    "redux-actions": "2.4.0",
    "redux-form": "7.4.2",
    "redux-immutablejs": "0.0.8",
    "redux-thunk": "2.3.0",
    "styled-components": "3.3.3"
  },
  "jest": {
    "setupFiles": [
      "./test/enzyme-setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|native-base-shoutem-theme|react-router-native)"
    ],
    "preset": "react-native",
    "globals": {
      "IS_DEVELOPMENT": false,
      "IS_PRODUCTION": true,
      "IS_LOCAL": false,
      "IS_LIVE": true,
      "ENVIRONMENT": "live",
      "IS_MOCK": true
    },
    "moduleDirectories": [
      "node_modules",
      "src/app"
    ]
  }
}
